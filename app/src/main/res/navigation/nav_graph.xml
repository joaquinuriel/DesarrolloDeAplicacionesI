<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/login_fragment">

    <fragment   android:id="@+id/login_fragment"
        android:name="edu.uade.ritmofit.auth.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/home_fragment" />

    </fragment>

    <fragment  android:id="@+id/home_fragment"
        android:name="edu.uade.ritmofit.home.ui.HomeFragment"
        tools:layout="@layout/home_fragment">

        <action
            android:id="@+id/action_home_to_sedes_graph"
            app:destination="@id/sedesFragment" />

        <action
            android:id="@+id/action_home_to_profile"
            app:destination="@id/profileActivity"
           />
        <action
            android:id="@+id/action_home_to_classes"
            app:destination="@id/classesFragment" />


        <action
            android:id="@+id/action_home_to_login"
            app:destination="@id/login_fragment" />

        <action
            android:id="@+id/action_home_to_historial"
            app:destination="@id/historial"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/historial"
        android:name="edu.uade.ritmofit.historial.ui.HistorialFragment"
        android:label="Historial"
        tools:layout="@layout/fragment_historial_list">
        <action
            android:id="@+id/action_historial_to_detail"
            app:destination="@id/historial_detail"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>
    <fragment
        android:id="@+id/historial_detail"
        android:name="edu.uade.ritmofit.historial.ui.HistorialDetailFragment"
        android:label="Detalle Reserva"
        tools:layout="@layout/fragment_historial_detail">
        <argument
            android:name="reservaId"
            app:argType="string" />
    </fragment>






    <fragment
        android:id="@+id/sedesFragment"
        android:name="edu.uade.ritmofit.Sedes.ui.SedesFragment"
        tools:layout="@layout/fragment_sedes">
        <action
            android:id="@+id/action_sedes_to_sedeDetail"
            app:destination="@id/sedeDetailFragment">
            <argument
            android:name="sedeId"
            app:argType="string" />
        </action >


    </fragment>




    <fragment
        android:id="@+id/sedeDetailFragment"
        android:name="edu.uade.ritmofit.Sedes.ui.SedeDetailFragment"
        tools:layout="@layout/sede_detail" >
        <argument
            android:name="sedeId"
            app:argType="string" />


    </fragment>





    <fragment
            android:id="@+id/classesFragment"
            android:name="edu.uade.ritmofit.classes.activity.ClassesFragment"
            android:label="Clases"
            tools:layout="@layout/fragment_classes">

        <action
                android:id="@+id/action_classesFragment_to_classDetailFragment"
                app:destination="@id/classDetailFragment" />
    </fragment>

    <fragment
            android:id="@+id/classDetailFragment"
            android:name="edu.uade.ritmofit.classes.activity.ClassDetailFragment"
            android:label="Detalle de clase"
            tools:layout="@layout/fragment_class_detail" />

    <activity
        android:id="@+id/profileActivity"
        android:name="edu.uade.ritmofit.profile.ui.ProfileActivity"
        android:label="activity_profile"
        tools:layout="@layout/activity_profile" />
    <activity
        android:id="@+id/profileActivity"
        android:name="edu.uade.ritmofit.profile.ui.ProfileActivity"
        android:label="activity_profile"
        tools:layout="@layout/activity_profile" />


</navigation>